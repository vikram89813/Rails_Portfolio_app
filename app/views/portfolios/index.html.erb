<h1>Portfolio Items</h1>

<%= link_to "Create new Item." , new_portfolio_url %>
<% @portfolio_items.each do |portfolio| %>
    <p> <%= link_to portfolio.title, portfolio_path(portfolio) %></p>
    <p> <%= portfolio.subtitle %></p>
    <p> <%= portfolio.body %></p>
   <%= image_tag portfolio.thumb_image  unless portfolio.thumb_image.nil? %>
   <%= link_to "Edit", edit_portfolio_path(portfolio.id) %>
   <%= link_to 'Delete portfolio item', portfolio_path(portfolio), method: :delete, data: { confirm: 'Are you sure?' } %>
<% end  %>